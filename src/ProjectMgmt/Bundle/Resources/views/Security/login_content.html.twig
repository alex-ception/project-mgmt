<form action="{{ path('fos_user_security_check') }}" method="post" role="form">
    <div class="form-group">
        <label for="username">{{ 'page.login.form.username.label'|trans }}</label>
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
    </div>
    <div class="form-group">
        <label for="password">{{ 'page.login.form.password.label'|trans }}</label>
        <input type="password" id="password" name="_password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary btn-lg pull-right">
        <i class="fa fa-power-off fa-lg"></i>
        {{ 'page.login.form.submit.label'|trans }}
    </button>
    <button type="reset" class="btn btn-default btn-lg pull-right">
        {{ 'page.login.form.reset.label'|trans }}
    </button>
</form>
