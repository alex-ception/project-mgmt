{% extends 'ProjectMgmtBundle::base.html.twig' %}

{% block body %}
<body class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <header>
                    <h1 class="acme">
                        {{ 'base.title'|trans }}
                    </h1>
                </header>
                {% spaceless %}
                {#% block flash_messages %}
                {% include 'CkBdeUpemSharedBundle::flash_messages.html.twig' %}
                {% endblock flash_messages %#}
                {% if error is defined and error %}
                <div class="alert alert-danger  alert-dismissable fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {{ error.message|trans }}
                </div>
                {% endif %}
                {% endspaceless %}
                {% include 'ProjectMgmtBundle:Security:login_content.html.twig' %}
            </div>
        </div>
    </div>
    {% block javascripts %}
     <script src="https://code.jquery.com/jquery.js"></script>
     <script src="{{ asset('/js/bootstrap.js') }}"></script>
     {% include 'AvocodeFormExtensionsBundle::javascripts.html.twig' %}
     {% if form is defined %}
     {{ afe_form_javascript(form) }}
     {% endif %}
     <script src="{{ asset('bundles/ckbdeupemshared/js/bdeupem.js') }}" type="text/javascript"></script>
     {% endblock javascripts %}
</body>
{% endblock body %}
{#% block breadcrumb_content %}
    {{ parent() }}
    <li class="active">
        {{ 'base.breadcrumb.login'|trans }}
    </li>
{% endblock breadcrumb_content %}

{% block content_title %}
    {{ 'page.login.content_title'|trans }}
{% endblock content_title %}
    
{% block content %}
<div class="col-md-offset-4 col-md-4">
    {% include 'ProjectMgmtBundle:Security:login_content.html.twig' %}
</div>
{% endblock content %#}